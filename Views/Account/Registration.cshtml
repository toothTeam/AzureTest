@model SoloduhaMVC.Models.RegistrationModel

@{
    ViewBag.Title = "Registration";
}

@using (Html.BeginForm())
{
    
    @Html.ValidationSummary(true)
    <h4 class="title">Вход в личный кабинет</h4>
    <table>
        <tr>
            <td>Логин: </td>
            <td>@Html.TextBoxFor(user => user.Login)
        @Html.ValidationMessageFor(user => user.Login)</td>
        </tr>
        <tr>
            <td>Пароль: </td>
            <td>
                @Html.PasswordFor(user => user.Password)
        @Html.ValidationMessageFor(user => user.Password)
            </td>
        </tr>
        <tr>
            <td>
                Повторите пароль: 
            </td>
            <td>
                @Html.PasswordFor(user => user.ConfirmPassword)
        @Html.ValidationMessageFor(user => user.ConfirmPassword)
            </td>
        </tr>
        <tr>
            <td colspan="2">
        <input type="submit" value="Зарегистрироваться" class="submitBtn" />

            </td>
        </tr>
    </table>
}
